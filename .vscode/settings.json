{
    "files.exclude": {
        "bin": true,
        "dest": true,
        "external": true,
    },
    "files.watcherExclude": {
        "bin": true,
        "dest": true,
        "external": true,
    },
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/src/",     
        "${workspaceFolder}/external/gflags/include/",
        "${workspaceFolder}/external/glog/include/",
        "${workspaceFolder}/external/spdlog/include/",
        "${workspaceFolder}/external/npcap/include/",
        "${workspaceFolder}/external/fmt/include/",
        "${workspaceFolder}/external/json/include/",
        "${workspaceFolder}/external/wxWidgets/include/",
        "${workspaceFolder}/external/wxWidgets/include/msvc/",
        "${workspaceFolder}/external/boost/include/boost-1_74/"
    ],
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.default.defines":[
        "_UNICODE",
    ],
    "explorer.autoReveal": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.fontSize": 16
}
